{
  "key": "schedule-hearing-date-qr",
  "config": {
    "content": [
      {
        "table": {
          "widths": ["*"],
          "body": [
            [
              {
                "stack": [
                  {
                    "text": "In the {{courtName}}, {{place}}, {{state}}",
                    "style": "header"
                  },
                  {
                    "text": "Case No. {{caseNumber}} of {{year}}",
                    "style": "subHeader"
                  },
                  {
                    "text": "In the matter of: {{caseName}}",
                    "style": "subHeader"
                  },
                  {
                    "text": "ORDER",
                    "style": "orderTitle"
                  },
                  {
                    "text": "{{date}}",
                    "style": "date"
                  },
                  {
                    "text": "This matter comes before the Court for the purpose of scheduling the next hearing date in the above-captioned case.",
                    "style": "bodyText"
                  },
                  {
                    "text": "WHEREAS, the Court is tasked with scheduling proceedings in a timely and efficient manner;",
                    "style": "bodyText"
                  },
                  {
                    "text": "WHEREAS, the Court has reviewed the case docket and considered the availability of the parties and their respective counsels;",
                    "style": "bodyText"
                  },
                  {
                    "text": "NOW, THEREFORE, IT IS HEREBY ORDERED that:",
                    "style": "orderText"
                  },
                  {
                    "ol": [
                      {
                        "text": "The next hearing date in the above-captioned case shall be scheduled for {{dateOfNextHearing}}.",
                        "style": "listItem"
                      },
                      {
                        "text": "{{partyNames}} shall make necessary arrangements to appear at the scheduled hearing date and time.",
                        "style": "listItem"
                      }
                    ],
                    "style": "list"
                  },
                  "{{#additionalComments}}",
                  {
                    "text": "{{additionalComments}}",
                    "style": "additionalComments"
                  },
                  "{{/additionalComments}}",
                  {
                    "text": "IT IS SO ORDERED.",
                    "style": "orderText"
                  },
                  {
                    "text": "{{judgeSignature}}",
                    "style": "signature"
                  },
                  {
                    "text": "{{judgeName}}",
                    "style": "signature"
                  },
                  {
                    "text": "Judge, {{courtName}}",
                    "style": "signature"
                  },
                  {
                    "text": "{{courtSeal}}",
                    "style": "signature"
                  }
                ],
                "alignment": "left",
                "margin": [0, 20, 0, 20]
              }
            ]
          ]
        },
        "layout": "noBorders"
      },
      {
        "style": "ws-head",
        "table": {
          "widths": ["*"],
          "body": [
            [
              {
                "image": "{{qrCodeImage}}",
                "width": 180,
                "height": 180,
                "style": "qr-code"
              }
            ]
          ]
        },
        "layout": "noBorders"
      }
    ],
    "styles": {
      "header": {
        "fontSize": 14,
        "bold": true,
        "alignment": "center",
        "margin": [0, 0, 0, 0]
      },
      "subHeader": {
        "fontSize": 14,
        "bold": true,
        "alignment": "center",
        "margin": [0, 0, 0, 10]
      },
      "orderTitle": {
        "fontSize": 14,
        "bold": true,
        "alignment": "center",
        "margin": [0, 20, 0, 0]
      },
      "date": {
        "fontSize": 12,
        "bold": true,
        "alignment": "left",
        "margin": [0, 0, 0, 10]
      },
      "bodyText": {
        "fontSize": 11,
        "margin": [0, 10, 0, 10]
      },
      "orderText": {
        "fontSize": 12,
        "margin": [0, 20, 0, 10]
      },
      "list": {
        "margin": [20, 10, 0, 10]
      },
      "listItem": {
        "fontSize": 11,
        "margin": [0, 5, 0, 5]
      },
      "additionalComments": {
        "fontSize": 11,
        "margin": [0, 10, 0, 0]
      },
      "signature": {
        "fontSize": 12,
        "alignment": "left",
        "margin": [0, 0, 0, 0]
      },
      "qr-code": {
        "color": "#000000",
        "alignment": "left",
        "margin": [0, 0, 0, 0]
      }
    }
  }
}
