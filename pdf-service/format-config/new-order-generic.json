{
  "key": "new-order-generic",
  "config": {
    "content": [
      {
        "table": {
          "widths": ["*"],
          "body": [
            [
              {
                "stack": [
                  {
                    "text": "{{orderHeading}}",
                    "style": "header"
                  },
                  {
                    "text": "Case No: {{caseNumber}}",
                    "style": "header",
                    "margin": [0, 5, 0, 0]
                  },
                  {
                    "text": "In the matter of: {{caseName}}",
                    "style": "header",
                    "margin": [0, 5, 0, 0]
                  },
                  {
                    "text": "Date: {{date}}",
                    "style": "header",
                    "margin": [0, 5, 0, 15]
                  },
                  {
                    "style": "table",
                    "table": {
                      "widths": ["30%", "70%"],
                      "body": [
                        "{{#complainantList}}",
                        [
                          {
                            "text": "Complainant {{index}}",
                            "style": "tableText",
                            "border": [true, true, true, true]
                          },
                          {
                            "text": "{{name}}",
                            "style": "tableText",
                            "border": [true, true, true, true]
                          }
                        ],
                        [
                          {
                            "text": "Advocate(s)",
                            "style": "tableText",
                            "border": [true, true, true, true]
                          },
                          {
                            "text": "{{listOfAdvocatesRepresenting}}",
                            "style": "tableText",
                            "border": [true, true, true, true]
                          }
                        ],
                        "{{/complainantList}}",
                        [
                          {
                            "text": "",
                            "style": "tableText",
                            "border": [true, false, false, false]
                          },
                          {
                            "text": "",
                            "style": "tableText",
                            "border": [false, false, true, false]
                          }
                        ],
                        "{{#accusedList}}",
                        [
                          {
                            "text": "Accused {{index}}",
                            "style": "tableText",
                            "border": [true, true, true, true]
                          },
                          {
                            "text": "{{name}}",
                            "style": "tableText",
                            "border": [true, true, true, true]
                          }
                        ],
                        [
                          {
                            "text": "Advocate(s)",
                            "style": "tableText",
                            "border": [true, true, true, true]
                          },
                          {
                            "text": "{{listOfAdvocatesRepresenting}}",
                            "style": "tableText",
                            "border": [true, true, true, true]
                          }
                        ],
                        "{{/accusedList}}",
                        [
                          {
                            "text": "",
                            "style": "tableText",
                            "border": [true, false, false, false]
                          },
                          {
                            "text": "",
                            "style": "tableText",
                            "border": [false, false, true, false]
                          }
                        ],
                        [
                          {
                            "text": "Offence",
                            "style": "tableText",
                            "border": [true, true, true, true]
                          },
                          {
                            "text": "S. 138 of the Negotiable Instruments Act, 1881",
                            "style": "tableText",
                            "border": [true, true, true, true]
                          }
                        ]
                      ]
                    }
                  },
                  {
                    "text": "ORDER",
                    "style": "orderTitle"
                  },
                  "{{#isHearingInProgress}}",
                  {
                    "text": "Present: {{listOfPresentAttendees}}",
                    "style": "content"
                  },
                  {
                    "text": "Absent: {{listOfAbsentAttendees}}",
                    "style": "body"
                  },
                  "{{/isHearingInProgress}}",
                  {
                    "stack": "{{{itemText}}}",
                    "style": "body"
                  },
                  "{{#isNextHearing}}",
                  {
                    "text": "Purpose of Next Hearing: {{purposeOfNextHearing}}",
                    "style": "content"
                  },
                  {
                    "text": "Date of Next Hearing: {{nextHearingDate}}",
                    "style": "body"
                  },
                  "{{/isNextHearing}}",
                  "{{#noOfSureties}}",
                  {
                    "text": "Number of Sureties: {{noOfSureties}} and Bail Amount: {{bailAmount}}",
                    "style": "content"
                  },
                  "{{/noOfSureties}}",
                  "{{^noOfSureties}}",
                  "{{#bailAmount}}",
                  {
                    "text": "Bail Amount: {{bailAmount}}",
                    "style": "content"
                  },
                  "{{/bailAmount}}",
                  "{{/noOfSureties}}",
                  {
                    "text": "{{judgeSignature}}",
                    "style": "judgeSignature"
                  },
                  {
                    "text": "{{judgeName}}",
                    "style": "content",
                    "margin": [0, 0, 0, 20]
                  },
                  {
                    "text": "{{judgeDesignation}}",
                    "style": "content",
                    "margin": [0, 0, 0, 20]
                  },
                  {
                    "text": "Date: {{date}}",
                    "style": "content"
                  }
                ],
                "alignment": "left",
                "margin": [0, 20, 0, 20]
              }
            ]
          ]
        },
        "layout": "noBorders"
      }
    ],
    "styles": {
      "header": {
        "fontSize": 14,
        "bold": true,
        "alignment": "center",
        "margin": [0, 0, 0, 5]
      },
      "table": {
        "fontSize": 13
      },
      "tableText": {
        "fontSize": 13,
        "margin": [2, 5, 2, 5]
      },
      "orderTitle": {
        "fontSize": 14,
        "bold": true,
        "alignment": "center",
        "margin": [0, 15, 0, 15]
      },
      "content": {
        "fontSize": 13
      },
      "body": {
        "fontSize": 13,
        "margin": [0, 0, 0, 20]
      },
      "judgeSignature": {
        "fontSize": 13,
        "alignment": "left",
        "margin": [0, 40, 0, 20]
      },
      "courtDetails": {
        "fontSize": 13,
        "alignment": "left",
        "margin": [0, 20, 0, 0]
      }
    }
  }
}
