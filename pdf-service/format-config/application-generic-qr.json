{
  "key": "application-generic-qr",
  "config": {
    "content": [
      {
        "table": {
          "widths": ["*"],
          "body": [
            [
              {
                "stack": [
                  {
                    "text": "{{courtComplex}}",
                    "style": "header"
                  },
                  {
                    "text": "{{caseNumber}}",
                    "style": "subHeader"
                  },
                  {
                    "text": "{{caseName}}",
                    "style": "subHeader"
                  },
                  {
                    "text": "{{applicationName}}",
                    "style": "applicationTitle"
                  },
                  {
                    "text": "{{date}}",
                    "style": "date"
                  },
                  {
                    "text": "Subject: {{applicationName}}",
                    "style": "subjectText"
                  },
                  {
                    "text": "My client, {{partyName}}, the {{partyType}}, hereby submits this application before this Honorable Court seeking {{reasonForApplication}}",
                    "style": "bodyText"
                  },
                  "{{#additionalComments}}",
                  {
                    "text": "{{additionalComments}}",
                    "style": "bodyText"
                  },
                  "{{/additionalComments}}",
                  {
                    "text": "Prayer:",
                    "style": "bodyText"
                  },
                  {
                    "text": "{{prayer}}",
                    "style": "bodyText"
                  },
                  {
                    "text": "I remain available to provide any further information or clarification that the Court may require.",
                    "style": "bodyText"
                  },
                  {
                    "text": "{{advocateSignature}}",
                    "style": "signature"
                  },
                  {
                    "text": "{{advocateName}}",
                    "style": "signature"
                  },
                  {
                    "text": "{{barRegistrationNumber}}",
                    "style": "signature"
                  },
                  {
                    "text": "Advocate for {{partyName}}",
                    "style": "signature"
                  }
                ],
                "alignment": "left",
                "margin": [0, 20, 0, 20]
              }
            ]
          ]
        },
        "layout": "noBorders"
      },
      {
        "style": "ws-head",
        "table": {
          "widths": ["*"],
          "body": [
            [
              {
                "image": "{{qrCodeImage}}",
                "width": 180,
                "height": 180,
                "style": "qr-code"
              }
            ]
          ]
        },
        "layout": "noBorders"
      }
    ],
    "styles": {
      "header": {
        "fontSize": 14,
        "bold": true,
        "alignment": "center",
        "margin": [0, 0, 0, 0]
      },
      "subHeader": {
        "fontSize": 14,
        "bold": true,
        "alignment": "center",
        "margin": [0, 0, 0, 0]
      },
      "applicationTitle": {
        "fontSize": 15,
        "bold": true,
        "alignment": "center",
        "margin": [0, 20, 0, 10]
      },
      "subTitle": {
        "fontSize": 12,
        "bold": true,
        "margin": [0, 10, 0, 0]
      },
      "date": {
        "fontSize": 12,
        "alignment": "left",
        "bold": true,
        "margin": [0, 0, 0, 10]
      },
      "subjectText": {
        "fontSize": 12,
        "bold": true,
        "margin": [0, 10, 0, 10]
      },
      "bodyText": {
        "fontSize": 11,
        "margin": [0, 10, 0, 10]
      },
      "additionalComments": {
        "fontSize": 11,
        "margin": [0, 10, 0, 10]
      },
      "signature": {
        "fontSize": 12,
        "alignment": "left",
        "margin": [0, 0, 0, 0]
      },
      "address": {
        "fontSize": 12,
        "alignment": "left",
        "margin": [0, -10, 0, 10]
      },
      "qr-code": {
        "color": "#000000",
        "alignment": "left",
        "margin": [0, 0, 0, 0]
      }
    }
  }
}
