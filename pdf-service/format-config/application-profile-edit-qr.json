{
  "key": "application-profile-edit-qr",
  "config": {
    "content": [
      {
        "table": {
          "widths": ["*"],
          "body": [
            [
              {
                "stack": [
                  {
                    "text": "{{courtComplex}}",
                    "style": "header"
                  },
                  {
                    "text": "{{caseNumber}}",
                    "style": "subHeader"
                  },
                  {
                    "text": "{{caseName}}",
                    "style": "subHeader"
                  },
                  {
                    "text": "APPLICATION FOR EDITING LITIGANT DETAILS",
                    "style": "applicationTitle"
                  },
                  {
                    "text": "To,",
                    "style": "honourStyle"
                  },
                  {
                    "text": "The Honorable {{judgeName}}{{addressOfTheCourt}}",
                    "style": "honourStyle"
                  },
                  {
                    "text": "{{date}}",
                    "style": "date"
                  },
                  {
                    "text": "Subject: Application for checkout of Hearing Date",
                    "style": "subjectText"
                  },
                  {
                    "text": "{{partyName}}, herein referred to as the applicant, represented by Advocate {{advocateName}}, respectfully submits as follows:",
                    "style": "bodyText"
                  },
                  {
                    "text": "This Application seeks permission to edit litigant details in the above-mentioned case:",
                    "style": "bodyText"
                  },
                  {
                    "text": "Current Details:",
                    "style": "subTitle"
                  },
                  {
                    "text": "Name: {{currentName}}",
                    "style": "bodyText"
                  },
                  {
                    "text": "Litigant Type: {{currentDetailsLitigantType}}",
                    "style": "bodyText"
                  },
                  {
                    "text": "Age: {{currentAge}}",
                    "style": "bodyText"
                  },
                  {
                    "text": "Phone Numbers: {{currentMobileNumber}}",
                    "style": "bodyText"
                  },
                  {
                    "text": "Email ID: {{currentEmailId}}",
                    "style": "bodyText"
                  },
                  {
                    "text": "Addresses:",
                    "style": "bodyText"
                  },
                  {
                    "text": "{{currentPermanentAddress}}",
                    "style": "bodyText"
                  },
                  {
                    "text": "{{currentResedentialAddress}}",
                    "style": "bodyText"
                  },
                  "{{#isEntity}}",
                  {
                    "text": " Company Name: {{currentCompanyName}}",
                    "style": "bodyText"
                  },
                  {
                    "text": " Entity Type: {{currentEntityType}}",
                    "style": "bodyText"
                  },
                  "{{/isEntity}}",
                  {
                    "text": "New Details: ",
                    "style": "subTitle"
                  },
                  {
                    "text": "Name: {{newName}}",
                    "style": "bodyText"
                  },
                  {
                    "text": "Age: {{newAge}}",
                    "style": "bodyText"
                  },
                  {
                    "text": "Phone Numbers: {{newMobileNumber}}",
                    "style": "bodyText"
                  },
                  {
                    "text": "Email ID: {{newEmailId}}",
                    "style": "bodyText"
                  },
                  {
                    "text": "Addresses:",
                    "style": "bodyText"
                  },
                  {
                    "text": "{{newPermanentAddress}}",
                    "style": "bodyText"
                  },
                  {
                    "text": "{{newResedentialAddress}}",
                    "style": "bodyText"
                  },
                  {
                    "text": [
                      {
                        "text": "Reason for Editing:",
                        "style": "subjectText"
                      },
                      {
                        "text": "{{reasonForEditing}}",
                        "style": "bodyText"
                      }
                    ]
                  },
                  {
                    "text": "The Applicant assures and undertakes to the Hon'ble Court that this request is made in good faith and will not prejudice the other party.",
                    "style": "bodyText"
                  },
                  {
                    "text": "Therefore, the Applicant humbly requests the Hon'ble Court to consider this application and grant permission to edit the aforementioned case details.",
                    "style": "bodyText"
                  },
                  {
                    "text": "{{prayer}}",
                    "style": "bodyText"
                  },
                  {
                    "text": "Dated this {{day}} day of {{month}}, {{year}}.",
                    "style": "date"
                  },
                  {
                    "text": "{{advocateSignature}}",
                    "style": "signature",
                    "margin": [0, 60, 0, 5]
                  },
                  {
                    "text": "{{advocateName}}",
                    "style": "signature"
                  },
                  {
                    "text": "{{barRegistrationNumber}}",
                    "style": "signature"
                  },
                  {
                    "text": "Advocate for {{partyName}}",
                    "style": "signature"
                  }
                ],
                "alignment": "left",
                "margin": [0, 20, 0, 20]
              }
            ]
          ]
        },
        "layout": "noBorders"
      },
      {
        "style": "ws-head",
        "table": {
          "widths": ["*"],
          "body": [
            [
              {
                "image": "{{qrCodeImage}}",
                "width": 180,
                "height": 180,
                "style": "qr-code"
              }
            ]
          ]
        },
        "layout": "noBorders"
      }
    ],
    "styles": {
      "header": {
        "fontSize": 14,
        "bold": true,
        "alignment": "center",
        "margin": [0, 0, 0, 0]
      },
      "subHeader": {
        "fontSize": 14,
        "bold": true,
        "alignment": "center",
        "margin": [0, 0, 0, 0]
      },
      "applicationTitle": {
        "fontSize": 15,
        "bold": true,
        "alignment": "center",
        "margin": [0, 20, 0, 10]
      },
      "subTitle": {
        "fontSize": 12,
        "bold": true,
        "margin": [0, 10, 0, 0]
      },
      "date": {
        "fontSize": 12,
        "alignment": "left",
        "bold": true,
        "margin": [0, 0, 0, 10]
      },
      "subjectText": {
        "fontSize": 12,
        "bold": true,
        "margin": [0, 10, 0, 10]
      },
      "bodyText": {
        "fontSize": 11,
        "margin": [0, 10, 0, 10]
      },
      "additionalComments": {
        "fontSize": 11,
        "margin": [0, 10, 0, 10]
      },
      "signature": {
        "fontSize": 12,
        "alignment": "left",
        "margin": [0, 0, 0, 0]
      },
      "address": {
        "fontSize": 12,
        "alignment": "left",
        "margin": [0, -10, 0, 10]
      },
      "honourStyle": {
        "fontSize": 12,
        "alignment": "left",
        "margin": [0, 10, 0, 10]
      },
      "qr-code": {
        "color": "#000000",
        "alignment": "left",
        "margin": [0, 0, 0, 0]
      }
    }
  }
}
