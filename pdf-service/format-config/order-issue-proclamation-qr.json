        ]
      },
      "date": {
        "fontSize": 12,
        "alignment": "left",
        "bold": true,
        "margin": [
          0,
          10,
          0,
          10
        ]
      },
      "subjectText": {
        "fontSize": 12,
        "bold": true,
        "margin": [
          0,
          10,
          0,
          10
        ]
      },
      "bodyText": {
        "fontSize": 11,
        "margin": [
          0,
          10,
