{
  "key": "application-delay-condonation",
  "config": {
    "content": [
      {
        "table": {
          "widths": ["*"],
          "body": [
            [
              {
                "stack": [
                  {
                    "text": "{{courtComplex}}",
                    "style": "header"
                  },
                  {
                    "text": "{{caseNumber}}",
                    "style": "subHeader"
                  },
                  {
                    "text": "Filing Number {{filingNumber}}",
                    "style": "subHeader"
                  },
                  {
                    "text": "{{caseName}}",
