{
  "key": "application-witness-deposition",
  "config": {
    "content": [
      {
        "table": {
          "widths": ["*"],
          "body": [
            [
              {
                "stack": [
                  {
                    "text": "{{courtComplex}}",
                    "style": "header"
                  },
                  {
                    "text": "Case No: {{caseNumber}}",
                    "style": "subHeader"
                  },
                  {
                    "text": "In the matter of: {{caseName}}",
                    "style": "caseName"
                  },
                  {
                    "text": "Application for Addition of New Witness",
                    "style": "applicationTitle"
                  },
                  {
                    "text": "{{partyName}}, represented by Advocate {{advocateName}}, respectfully seek permission to add a witness pertinent to the above-mentioned case.",
                    "style": "bodyText"
                  },
                  {
                    "text": "The details of the witness are below:",
                    "style": "bodyText"
                  },
                  {
                    "style": "table",
                    "table": {
                      "widths": ["8%", "23%", "23%", "23%", "23%"],
                      "body": [
                        [
                          {
                            "text": "S. No.",
                            "style": "bodyText",
                            "bold": true,
                            "border": [true, true, true, true]
                          },
                          {
                            "text": "Name",
                            "style": "bodyText",
                            "bold": true,
                            "border": [true, true, true, true]
                          },
                          {
                            "text": "Designation",
                            "style": "bodyText",
                            "bold": true,
                            "border": [true, true, true, true]
                          },
                          {
                            "text": "Address",
                            "style": "bodyText",
                            "bold": true,
                            "border": [true, true, true, true]
                          },
                          {
                            "text": "Purpose/Documents to be presented",
                            "style": "bodyText",
                            "bold": true,
                            "border": [true, true, true, true]
                          }
                        ],
                        "{{#witnessList}}",
                        [
                          {
                            "text": "{{index}}",
                            "style": "bodyText",
                            "border": [true, true, true, true]
                          },
                          {
                            "text": "{{witnessName}}",
                            "style": "bodyText",
                            "border": [true, true, true, true]
                          },
                          {
                            "text": "{{witnessDesignation}}",
                            "style": "bodyText",
                            "border": [true, true, true, true]
                          },
                          {
                            "stack": [
                              "{{#witnessAddresses}}",
                              {
                                "text": "{{.}}",
                                "margin": [0, 5, 0, 5]
                              },
                              "{{/witnessAddresses}}"
                            ],
                            "style": "bodyText",
                            "margin": [0, 5, 0, 5],
                            "border": [true, true, true, true]
                          },
                          {
                            "text": "{{witnessAdditionalComments}}",
                            "style": "bodyText",
                            "border": [true, true, true, true]
                          }
                        ],
                        "{{/witnessList}}"
                      ]
                    }
                  },
                  {
                    "text": "The petitioner assures and undertakes to the Hon'ble Court that this request is made in good faith and will not prejudice the other party.",
                    "style": "bodyText"
                  },
                  {
                    "text": "Therefore, the petitioner humbly requests the Hon'ble Court to consider and allow this application.",
                    "style": "bodyText"
                  },
                  {
                    "text": "Dated this {{day}} day of {{month}}, {{year}}.",
                    "style": "date"
                  },
                  {
                    "text": "{{advocateSignature}}",
                    "style": "signature",
                    "margin": [0, 60, 0, 5]
                  },
                  {
                    "text": "{{advocateName}}",
                    "style": "signature"
                  },
                  {
                    "text": "{{barRegistrationNumber}}",
                    "style": "signature"
                  },
                  {
                    "text": "Advocate for {{partyName}}",
                    "style": "signature"
                  }
                ],
                "alignment": "left",
                "margin": [0, 20, 0, 20]
              }
            ]
          ]
        },
        "layout": "noBorders"
      }
    ],
    "styles": {
      "header": {
        "fontSize": 14,
        "bold": true,
        "alignment": "center",
        "margin": [0, 0, 0, 0]
      },
      "subHeader": {
        "fontSize": 14,
        "bold": true,
        "alignment": "center",
        "margin": [0, 10, 0, 0]
      },
      "caseName": {
        "fontSize": 14,
        "bold": true,
        "alignment": "center",
        "margin": [0, 0, 0, 10]
      },
      "applicationTitle": {
        "fontSize": 14,
        "bold": true,
        "alignment": "center",
        "margin": [0, 10, 0, 10]
      },
      "date": {
        "fontSize": 12,
        "alignment": "left",
        "margin": [0, 0, 0, 10]
      },
      "subjectText": {
        "fontSize": 12,
        "bold": true,
        "margin": [0, 10, 0, 10]
      },
      "bodyText": {
        "fontSize": 11,
        "margin": [0, 10, 0, 10]
      },
      "additionalComments": {
        "fontSize": 11,
        "margin": [0, 10, 0, 10]
      },
      "signature": {
        "fontSize": 12,
        "alignment": "left",
        "margin": [0, 0, 0, 0]
      },
      "address": {
        "fontSize": 12,
        "alignment": "left",
        "margin": [0, -10, 0, 10]
      }
    }
  }
}
