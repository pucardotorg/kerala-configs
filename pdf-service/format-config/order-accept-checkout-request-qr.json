{
  "key": "order-accept-checkout-request-qr",
  "config": {
    "content": [
      {
        "table": {
          "widths": ["*"],
          "body": [
            [
              {
                "stack": [
                  {
                    "text": "IN THE {{courtName}}",
                    "style": "header"
                  },
                  {
                    "text": "{{caseName}} and {{caseNumber}}",
                    "style": "header"
                  },
                  {
                    "text": "ORDER",
                    "style": "orderTitle"
                  },
                  {
                    "text": "{{date}}",
                    "style": "date"
                  },
                  {
                    "text": "This matter comes before the Court for the purpose of rescheduling the hearing date in the above-captioned case.",
                    "style": "contentText"
                  },
                  {
                    "text": "WHEREAS, the Court may, for good cause shown, reschedule hearings in the interests of justice;",
                    "style": "contentText"
                  },
                  {
                    "text": "WHEREAS, {{partyName}} has/have filed a request {{applicationId}} for the rescheduling of the hearing date, citing {{reasonForRescheduling}};",
                    "style": "contentText"
                  },
                  {
                    "text": "WHEREAS, the Court has reviewed the request for rescheduling and finds that good cause exists for granting the request;",
                    "style": "contentText"
                  },
                  {
                    "text": "NOW, THEREFORE, IT IS HEREBY ORDERED that:",
                    "style": "contentText"
                  },
                  {
                    "text": "The hearing date in the above-captioned case scheduled for {{originalHearingDate}} is hereby due to be RESCHEDULED.",
                    "style": "contentText"
                  },
                  "{{#additionalComments}}",
                  {
                    "text": "{{additionalComments}}",
                    "style": "contentText"
                  },
                  "{{/additionalComments}}",
                  {
                    "text": "IT IS SO ORDERED.",
                    "style": "orderText"
                  },
                  {
                    "text": "{{judgeSignature}}",
                    "style": "signature"
                  },
                  {
                    "text": "{{judgeName}}",
                    "style": "signature"
                  },
                  {
                    "text": "Judge, {{courtName}}",
                    "style": "signature"
                  },
                  {
                    "text": "{{courtSeal}}",
                    "style": "signature"
                  }
                ],
                "alignment": "left",
                "margin": [0, 20, 0, 20]
              }
            ]
          ]
        },
        "layout": "noBorders"
      },
      {
        "style": "ws-head",
        "table": {
          "widths": ["*"],
          "body": [
            [
              {
                "image": "{{qrCodeImage}}",
