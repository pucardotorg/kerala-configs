{
  "key": "order-notice-qr",
  "config": {
    "content": [
      {
        "table": {
          "widths": ["*"],
          "body": [
            [
              {
                "stack": [
                  {
                    "text": "In the Court of {{courtName}}, {{place}}, {{state}}",
                    "style": "header"
                  },
                  {
                    "text": "Case No. {{caseNumber}} of {{year}}",
                    "style": "header"
                  },
                  {
                    "text": "In the matter of: {{caseName}}",
                    "style": "header"
                  },
                  {
                    "text": "ORDER",
                    "style": "orderTitle"
                  },
                  {
                    "text": "Issue of Notice to {{partyName}}",
                    "style": "orderTitle"
                  },
                  {
                    "text": "{{date}}",
                    "style": "date"
                  },
                  {
                    "text": "WHEREAS, the Court has determined that it is necessary to issue a notice of {{typeOfNotice}} to {{partyName}}; and",
                    "style": "contentText"
                  },
                  {
                    "text": "WHEREAS, the Court has reviewed the relevant facts and circumstances necessitating the issuance of this notice; and",
                    "style": "contentText"
                  },
                  {
                    "text": "WHEREAS, the Court has considered the relevant legal provisions regarding the issuance of notices;",
                    "style": "contentText"
                  },

                  {
                    "text": "NOW, THEREFORE, IT IS HEREBY ORDERED that:",
                    "style": "contentText"
                  },
                  {
                    "text": "A notice of {{typeOfNotice}} be issued to {{partyName}}, requiring their presence before this Court on {{hearingDate}}.",
                    "style": "contentText"
                  },
                  {
                    "text": "The notice shall specify the purpose and details of the required action.",
                    "style": "contentText"
                  },
                  {
                    "text": "The notice shall be served upon {{partyName}} in accordance with the legal requirements for service of process.",
                    "style": "contentText"
                  },
                  {
                    "text": "{{additionalComments}}",
                    "style": "contentText"
                  },
                  {
                    "text": "IT IS SO ORDERED.",
                    "style": "orderText"
                  },
                  {
                    "text": "{{judgeSignature}}",
                    "style": "signature"
                  },
                  {
                    "text": "{{judgeName}}",
                    "style": "signature"
                  },
                  {
                    "text": "Judge, District Court of {{courtName}}",
                    "style": "signature"
                  },
                  {
                    "text": "{{courtSeal}}",
                    "style": "signature"
                  }
                ],
                "alignment": "left",
                "margin": [0, 20, 0, 20]
              }
            ]
          ]
        },
        "layout": "noBorders"
      },
      {
        "style": "ws-head",
        "table": {
          "widths": ["*"],
          "body": [
            [
              {
                "image": "{{qrCodeImage}}",
                "width": 180,
                "height": 180,
                "style": "qr-code"
              }
            ]
          ]
        },
        "layout": "noBorders"
      }
    ],
    "styles": {
      "header": {
        "fontSize": 14,
        "bold": true,
        "alignment": "center",
        "margin": [0, 0, 0, 5]
      },
      "caseName": {
        "fontSize": 14,
        "alignment": "center",
        "margin": [0, 5, 0, 5]
      },
      "caseNumber": {
        "fontSize": 14,
        "alignment": "center",
        "margin": [0, 5, 0, 5]
      },
      "orderTitle": {
        "fontSize": 16,
        "bold": true,
        "alignment": "center",
        "margin": [0, 5, 0, 5]
      },
      "orderName": {
        "fontSize": 14,
        "bold": true,
        "alignment": "center",
        "margin": [0, 5, 0, 20]
      },
      "date": {
        "fontSize": 12,
        "alignment": "left",
        "margin": [0, 10, 0, 10]
      },
      "contentText": {
        "fontSize": 11,
        "alignment": "left",
        "margin": [0, 10, 0, 10]
      },
      "orderText": {
        "fontSize": 12,
        "alignment": "left",
        "margin": [0, 10, 0, 20]
      },
      "signature": {
        "fontSize": 12,
        "alignment": "left",
        "margin": [0, 10, 0, 0]
      },
      "tableData": {
        "bold": true,
        "fontSize": 10,
        "color": "black"
      },
      "qr-code": {
        "color": "#000000",
        "alignment": "left",
        "margin": [0, 0, 0, 0]
      }
    }
  }
}
