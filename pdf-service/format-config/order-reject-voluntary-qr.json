{
  "key": "order-reject-voluntary-qr",
  "config": {
    "content": [
      {
        "table": {
          "widths": ["*"],
          "body": [
            [
              {
                "stack": [
                  {
                    "text": "{{orderHeading}}",
                    "style": "header"
                  },
                  {
                    "text": "Case No: {{caseNumber}} of {{caseYear}}",
                    "style": "header"
                  },
                  {
                    "text": "In the matter of: {{caseName}}",
                    "style": "header"
                  },
                  {
                    "text": "ORDER",
                    "style": "orderTitle"
                  },
                  {
                    "text": "Rejection of Submission",
                    "style": "date"
                  },
                  {
                    "text": "{{date}}",
                    "style": "date"
                  },
                  {
                    "text": "This matter comes before the Court regarding the submission made by {{partyName}} on {{submissionDate}} with Submission ID {{applicationNumber}}.",
                    "style": "contentText"
                  },
                  {
                    "text": "WHEREAS, the Court has reviewed the {{submissionType}} and relevant documentation provided;",
                    "style": "contentText"
                  },
                  {
                    "text": "WHEREAS, after careful consideration, the Court finds the {{submissionType}} does not {{reasonForRejection}}.;",
                    "style": "contentText"
                  },
                  {
                    "text": "NOW, THEREFORE, IT IS HEREBY ORDERED that:",
                    "style": "contentText"
                  },
                  {
                    "text": "The {{submissionType}} made by {{partyName}} with Submission ID {{applicationNumber}} on {{submissionDate}} is hereby REJECTED for the reason stated above.",
                    "style": "contentText"
                  },
                  {
                    "text": "IT IS SO ORDERED.",
                    "style": "orderText"
                  },
                  "{{#additionalComments}}",
                  {
                    "text": "{{additionalComments}}",
                    "style": "contentText"
                  },
                  "{{/additionalComments}}",
                  {
                    "text": "{{judgeSignature}}",
                    "style": "signature"
                  },
                  {
                    "text": "{{judgeName}}",
                    "style": "signature"
                  },
                  {
                    "text": "{{judgeDesignation}}",
                    "style": "signature"
                  }
                ],
                "alignment": "left",
                "margin": [0, 20, 0, 20]
              }
            ]
          ]
        },
        "layout": "noBorders"
      },
      {
        "style": "ws-head",
        "table": {
          "widths": ["*"],
          "body": [
            [
              {
                "image": "{{qrCodeImage}}",
                "width": 180,
                "height": 180,
                "style": "qr-code"
              }
            ]
          ]
        },
        "layout": "noBorders"
      }
    ],
    "styles": {
      "header": {
        "fontSize": 14,
        "bold": true,
        "alignment": "center",
        "margin": [0, 0, 0, 5]
      },
      "caseName": {
        "fontSize": 14,
        "alignment": "center",
        "margin": [0, 5, 0, 5]
      },
      "caseNumber": {
        "fontSize": 14,
        "alignment": "center",
        "margin": [0, 5, 0, 5]
      },
      "orderTitle": {
        "fontSize": 16,
        "bold": true,
        "alignment": "center",
        "margin": [0, 5, 0, 5]
      },
      "orderName": {
        "fontSize": 14,
        "bold": true,
        "alignment": "center",
        "margin": [0, 5, 0, 20]
      },
      "date": {
        "fontSize": 12,
        "alignment": "left",
        "margin": [0, 10, 0, 10]
      },
      "contentText": {
        "fontSize": 11,
        "alignment": "left",
        "margin": [0, 10, 0, 10]
      },
      "orderText": {
        "fontSize": 12,
        "bold": true,
        "alignment": "left",
        "margin": [0, 10, 0, 20]
      },
      "signature": {
        "fontSize": 12,
        "alignment": "left",
        "margin": [0, 10, 0, 0]
      },
      "tableData": {
        "bold": true,
        "fontSize": 10,
        "color": "black"
      }
    }
  }
}
