{
  "key": "order-replace-advocate",
  "config": {
    "content": [
      {
        "table": {
          "widths": ["*"],
          "body": [
            [
              {
                "stack": [
                  {
                    "text": "{{orderHeading}}",
                    "style": "header"
                  },
                  {
                    "text": "Case No. {{caseNumber}} of {{year}}",
                    "style": "header"
                  },
                  {
                    "text": "In the matter of: {{caseName}}",
                    "style": "header"
                  },
                  {
                    "text": "ORDER",
                    "style": "orderTitle"
                  },
                  {
                    "text": "{{date}}",
                    "style": "date"
                  },
                  {
                    "text": "WHEREAS, {{partyName}} has filed the Motion to Change the Present Vakalat on {{dateOfMotion}}; and",
                    "style": "contentText"
                  },
                  {
                    "text": "WHEREAS, the Court has reviewed the Motion to Change the Advocate and the reasons provided therein, which include  {{briefReasonOfWithdrawal}}; and",
                    "style": "contentText"
                  },
                  {
                    "text": "NOW, THEREFORE, IT IS HEREBY ORDERED that:",
                    "style": "contentText"
                  },
                  {
                    "ol": [
                      {
                        "text": "The Motion to Change the Advocate filed by {{partyName}} is {{response}}.",
                        "style": "bodyText"
                      },
                      {
                        "text": "Permission is hereby granted to engage {{advocateName}}.",
                        "style": "bodyText"
                      }
                    ],
                    "style": "list"
                  },
                  {
                    "text": "{{additionalComments}}",
                    "style": "contentText"
                  },
                  {
                    "text": "IT IS SO ORDERED.",
                    "style": "orderText"
                  },
                  {
                    "text": "{{judgeSignature}}",
                    "style": "advocateSignature"
                  },
                  {
                    "text": "{{judgeName}}",
                    "style": "signature"
                  },
                  {
                    "text": "{{judgeDesignation}}",
                    "style": "signature"
                  }
                ],
                "alignment": "left",
                "margin": [0, 20, 0, 20]
              }
            ]
          ]
        },
        "layout": "noBorders"
      }
    ],
    "styles": {
      "header": {
        "fontSize": 14,
        "bold": true,
        "alignment": "center",
        "margin": [0, 0, 0, 5]
      },
      "subheader": {
        "fontSize": 11,
        "alignment": "left",
        "bold": true,
        "margin": [10, 10, 0, 10]
      },
      "orderTitle": {
        "fontSize": 16,
        "bold": true,
        "alignment": "center",
        "margin": [0, 5, 0, 5]
      },
      "date": {
        "fontSize": 12,
        "alignment": "left",
        "margin": [0, 10, 0, 10]
      },
      "contentText": {
        "fontSize": 11,
        "alignment": "left",
        "margin": [0, 10, 0, 10]
      },
      "orderText": {
        "fontSize": 12,
        "alignment": "left",
        "margin": [0, 10, 0, 20]
      },
      "signature": {
        "fontSize": 12,
        "alignment": "left",
        "margin": [0, 10, 0, 0]
      },
      "advocateSignature": {
        "fontSize": 12,
        "alignment": "left",
        "margin": [0, 50, 0, 5]
      },
      "list": {
        "margin": [24, 0, 0, 5]
      }
    }
  }
}
