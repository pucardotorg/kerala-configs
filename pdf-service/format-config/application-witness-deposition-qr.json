{
  "key": "application-witness-deposition-qr",
  "config": {
    "content": [
      {
        "table": {
          "widths": ["*"],
          "body": [
            [
              {
                "stack": [
                  {
                    "text": "{{courtComplex}}",
                    "style": "header"
                  },
                  {
                    "text": "{{caseNumber}}",
                    "style": "subHeader"
                  },
                  {
                    "text": "{{caseName}}",
                    "style": "subHeader"
                  },
                  {
                    "text": "APPLICATION FOR PRODUCTION OF DOCUMENTS/EVIDENCE",
                    "style": "applicationTitle"
                  },
                  {
                    "text": "To, The Honorable {{judgeName}}, {{addressOfTheCourt}}",
                    "style": "subjectText"
                  },
                  {
                    "text": "{{date}}",
                    "style": "date"
                  },
                  {
                    "text": "Subject: Application for Addition of New Witness",
                    "style": "subjectText"
                  },
                  {
                    "text": "{{partyName}}, represented by Advocate {{advocateName}}, respectfully submits as follows:",
                    "style": "bodyText"
                  },
                  {
                    "text": "This application seeks permission to add a witness pertinent to the above-mentioned case. The details of the witness are below:",
                    "style": "bodyText"
                  },
                  {
                    "style": "table",
                    "table": {
                      "widths": [
                        "10%",
                        "30%",
                        "30%",
                        "30%"
                      ],
                      "body": [
                        [
                          {
                            "text": "S. No.",
                            "style": "bodyText",
                            "bold": true,
                            "border": [true, true, true, true]
                          },
                          {
                            "text": "Name",
                            "style": "bodyText",
                            "bold": true,
                            "border": [true, true, true, true]
                          },
                          {
                            "text": "Designation",
                            "style": "bodyText",
                            "bold": true,
                            "border": [true, true, true, true]
                          },
                          {
                            "text": "Additional Comments",
                            "style": "bodyText",
                            "bold": true,
                            "border": [true, true, true, true]
                          }
                        ],
                        "{{#witnessList}}",
                        [
                          {
                            "text": "{{index}}",
                            "style": "bodyText",
                            "border": [true, true, true, true]
                          },
                          {
                            "text": "{{witnessName}}",
                            "style": "bodyText",
                            "border": [true, true, true, true]
                          },
                          {
                            "text": "{{witnessDesignation}}",
                            "style": "bodyText",
                            "border": [true, true, true, true]
                          },
                          {
                            "text": "{{witnessAdditionalComments}}",
                            "style": "bodyText",
                            "border": [true, true, true, true]
                          }
                        ],
                        "{{/witnessList}}"
                      ]
                    }
                  },
                  {
                    "text": "The petitioner assures and undertakes to the Hon'ble Court that this request is made in good faith and will not prejudice the other party.",
                    "style": "bodyText"
                  },
                  {
                    "text": "Therefore, the petitioner humbly requests the Hon'ble Court to consider this application and grant permission to produce the aforementioned documents/evidence.",
                    "style": "bodyText"
                  },
                  {
                    "text": "Dated this {{day}} day of {{month}}, {{year}}.",
                    "style": "date"
                  },
                  {
                    "text": "{{advocateSignature}}",
                    "style": "signature",
                    "margin": [0, 60, 0, 5]
                  },
                  {
                    "text": "{{advocateName}}",
                    "style": "signature"
                  },
                  {
                    "text": "{{barRegistrationNumber}}",
                    "style": "signature"
                  },
                  {
                    "text": "Advocate for {{partyName}}",
                    "style": "signature"
                  }
                ],
                "alignment": "left",
                "margin": [0, 20, 0, 20]
              }
            ]
          ]
        },
        "layout": "noBorders"
      },
      {
        "style": "ws-head",
        "table": {
          "widths": ["*"],
          "body": [
            [
              {
                "image": "{{qrCodeImage}}",
                "width": 180,
                "height": 180,
                "style": "qr-code"
              }
            ]
          ]
        },
        "layout": "noBorders"
      }
    ],
    "styles": {
      "header": {
        "fontSize": 14,
        "bold": true,
        "alignment": "center",
        "margin": [0, 0, 0, 5]
      },
      "subHeader": {
        "fontSize": 14,
        "bold": true,
        "alignment": "center",
        "margin": [0, 0, 0, 5]
      },
      "applicationTitle": {
        "fontSize": 15,
        "bold": true,
        "alignment": "left",
        "margin": [0, 20, 0, 10]
      },
      "date": {
        "fontSize": 12,
        "alignment": "left",
        "margin": [0, 10, 0, 10]
      },
      "bodyText": {
        "fontSize": 11,
        "margin": [0, 10, 0, 10]
      },
      "additionalComments": {
        "fontSize": 11,
        "margin": [0, 10, 0, 10]
      },
      "signature": {
        "fontSize": 12,
        "alignment": "left",
        "margin": [0, 0, 0, 0]
      },
      "advocateSignature": {
        "fontSize": 12,
        "alignment": "left",
        "margin": [0, 50, 0, 5]
      },
      "qr-code": {
        "color": "#000000",
        "alignment": "left",
        "margin": [0, 0, 0, 0]
      }
    }
  }
}
