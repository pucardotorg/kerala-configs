{
  "key": "accept-reschedule-request",
  "config": {
    "content": [
      {
        "table": {
          "widths": ["*"],
          "body": [
            [
              {
                "stack": [
                  {
                    "text": "{{orderHeading}}",
                    "style": "header"
                  },
                  {
                    "text": "{{caseName}} and {{caseNumber}}",
                    "style": "caseNameNumber"
                  },
                  {
                    "text": "ORDER",
                    "style": "orderTitle"
                  },
                  {
                    "text": "{{date}}",
                    "style": "date"
                  },
                  {
                    "text": "This matter comes before the Court for the purpose of rescheduling the hearing date in the above-captioned case.",
                    "style": "bodyText"
                  },
                  {
                    "text": "WHEREAS, the Court may, for good cause shown, reschedule hearings in the interests of justice;",
                    "style": "bodyText"
                  },
                  {
                    "text": "WHEREAS, {{partyNames}} has/have filed a request {{applicationId}} for the rescheduling of the hearing date, citing {{reasonForRescheduling}};",
                    "style": "bodyText"
                  },
                  {
                    "text": "WHEREAS, the Court has reviewed the request for rescheduling and finds that good cause exists for granting the request;",
                    "style": "bodyText"
                  },
                  {
                    "text": "NOW, THEREFORE, IT IS HEREBY ORDERED that:",
                    "style": "orderText"
                  },
                  {
                    "text": "The hearing date in the above-captioned case scheduled for {{originalHearingDate}} is hereby due to be RESCHEDULED for {{reasonForRescheduling}}.",
                    "style": "bodyText"
                  },
                  "{{#additionalComments}}",
                  {
                    "text": "{{additionalComments}}",
                    "style": "additionalComments"
                  },
                  "{{/additionalComments}}",
                  {
                    "text": "IT IS SO ORDERED.",
                    "style": "orderText"
                  },
                  {
                    "text": "{{judgeSignature}}",
                    "style": "signature"
                  },
                  {
                    "text": "{{judgeName}}",
                    "style": "signature"
                  },
                  {
                    "text": "{{judgeDesignation}}",
                    "style": "signature"
                  }
                ],
                "alignment": "left",
                "margin": [0, 20, 0, 20]
              }
            ]
          ]
        },
        "layout": "noBorders"
      }
    ],
    "styles": {
      "header": {
        "fontSize": 14,
        "bold": true,
        "alignment": "center",
        "margin": [0, 0, 0, 0]
      },
      "caseNameNumber": {
        "fontSize": 14,
        "bold": true,
        "alignment": "center",
        "margin": [0, 0, 0, 10]
      },
      "orderTitle": {
        "fontSize": 14,
        "bold": true,
        "alignment": "center",
        "margin": [0, 20, 0, 0]
      },
      "date": {
        "fontSize": 12,
        "bold": true,
        "alignment": "left",
        "margin": [0, 0, 0, 10]
      },
      "bodyText": {
        "fontSize": 11,
        "margin": [0, 10, 0, 10]
      },
      "orderText": {
        "fontSize": 12,
        "margin": [0, 20, 0, 10]
      },
      "additionalComments": {
        "fontSize": 11,
        "margin": [0, 10, 0, 0]
      },
      "signature": {
        "fontSize": 12,
        "alignment": "left",
        "margin": [0, 0, 0, 0]
      }
    }
  }
}
